<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <!-- Accueil -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.foodshareapp.ui.home.HomeFragment"
        android:label="Accueil">

        <!-- Ajoutez cette action -->
        <action
            android:id="@+id/action_homeFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
        <!-- Conservez votre action existante -->
        <action
            android:id="@+id/action_homeFragment_to_chatFragment"
            app:destination="@id/chatFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.example.foodshareapp.ui.home.DetailsFragment"
        android:label="DÃ©tails" />

    <!-- Carte -->
    <fragment
        android:id="@+id/mapFragment"
        android:name="com.example.foodshareapp.ui.map.MapFragment"
        android:label="Carte" />

    <!-- Ajouter un plat -->
    <fragment
        android:id="@+id/addFragment"
        android:name="com.example.foodshareapp.ui.publish.PublishFragment"
        android:label="Ajouter" />

    <!-- Messages -->
    <fragment
        android:id="@+id/messagesFragment"
        android:name="com.example.foodshareapp.ui.messages.MessagesFragment"
        android:label="Messages">
        <action
            android:id="@+id/action_messagesFragment_to_chatFragment"
            app:destination="@id/chatFragment" />
    </fragment>

    <!-- Chat -->
    <fragment
        android:id="@+id/chatFragment"
        android:name="com.example.foodshareapp.ui.messages.ChatFragment"
        android:label="Chat" >
        <argument
            android:name="receiverId"
            app:argType="string" />
    </fragment>

    <!-- Profil -->
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.foodshareapp.ui.profile.ProfileFragment"
        android:label="Profil" />
</navigation>
